@{
    Layout = "_ProfileLayout";
    ViewData["Title"] = "kayas.dev";
}
<div class="container py-0">
    <div class="row justify-content-center border-2">
        <div class="col-md-10">
            <div class="card shadow-sm border-danger">
                <!-- Üstteki Görsel -->
                <img src="~/img/js.jpg" class="card-img-top"
                     style="height: 300px; width: 100%; object-fit:cover; border-radius: 20px 20px 0 0;"
                     alt="Post Image">

                <div class="card-body d-flex pt-3 align-items-center">
                    <!-- Profil Resmi -->
                    <div class="me-3 d-grid">
                        <img src="~/img/ben2.jpg" class="rounded-circle border shadow"
                             style="height: 75px; width: 75px; object-fit: cover;" alt="Profile Picture">

                             <small class="text-center mt-1">Görkem KAYA</small>
                    </div>

                    <!-- İçerik -->
                    <div class="flex-grow-1">
                        <h5 class="card-title">Görkem Kaya <small class="text-dark">| Backend Developer</small></h5>
                        <p class="card-text text-muted">
                            +9853 Followers | +2842 Following
                        </p>
                        <p class="card-text">
                            <small class="text-secondary">Last updated <span class="card-title text-danger">3 mins ago</span></small>
                        </p>
                    </div>

                    <!-- Sosyal Medya İkonları -->
                    <div class="ms-auto d-flex align-items-center" style="margin-bottom:7%">
                        <a href="https://www.linkedin.com/sharing/share-offsite/?url=YOUR_URL" target="_blank" class="me-3">
                            <i class="fa-brands fa-github fs-5 blacktored"></i>
                        </a>
                        <a href="https://twitter.com/intent/tweet?url=YOUR_URL" target="_blank" class=" me-3">
                            <i class="fa-brands fa-linkedin-in fs-5 blacktored"></i>
                        </a>
                        <a href="https://www.facebook.com/sharer/sharer.php?u=YOUR_URL" target="_blank" class="">
                            <i class="fa-brands fa-x-twitter fs-5 text-decoration-none blacktored"></i>
                        </a>
                    </div>
                </div>
            </div>
        <div class="card-body mt-2 shadow-sm text-center">
            <h2>Eager Loading, Explicit Loading and Lazy Loading on Entity Framework Core</h2>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pirata+One&display=swap" rel="stylesheet">


    @* FontAwesome *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">



    <style>
        header, main, footer {
            max-width: 1200px; /* Maksimum genişlik */
            margin: 0 auto; /* Merkezi hizalama */
        }

        .nav-links {
            display: flex;
            gap: 29px;
            color: black !important;
        }
        
        </style>

</head>
<body>
    <header class="lh-1 py-3">
        <!-- Üst Navbar -->
        <div class="container">

            <nav class="navbar navbar-expand-sm navbar-light bg-white mb-1">
                <div class="container d-flex justify-content-between">
                    <div class="mt-3">
                        <a href="https://github.com/gorkemkayas" class="fa-brands fs-5 blacktored text-decoration-none fa-github me-1"></a>
                        <a href="https://www.linkedin.com/in/gorkemkayas/" class="fa-brands fs-5 blacktored text-decoration-none fa-linkedin-in me-1"></a>
                        <a href="https://x.com/gorkemkayaz" class="fa-brands fs-5 blacktored text-decoration-none fa-x-twitter"></a>
                    </div>
                    <a class="navbar-brand pirata-one-regular" style="font-size:50px" asp-area="" asp-controller="Home" asp-action="Index">kayas<span class="text-danger">.</span></a>
                    <div>
                    <a href="/user/signup" class="btn btn-sm btn-danger rounded-pill" style="">Sign Up</a>
                    <a href="/user/signin" class="btn btn-sm btn-dark rounded-pill" style="">Sign In</a>
                    </div>
                </div>
            </nav>

            <!-- Alt Navigation Bar -->
            <div class="py-1 mb-3 border-bottom border-top">
                <nav class="nav nav-links nav-underline justify-content-center">
                    <a class="nav-item nav-link link-body-emphasis active" href="#">World</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">U.S.</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Technology</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Design</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Culture</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Business</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Politics</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Opinion</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Science</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Health</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Style</a>
                    <a class="nav-item nav-link link-body-emphasis" href="#">Travel</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="flex-grow-1">
        <div class="container mt-4">
            <!-- Genişlik header ile uyumlu -->
            @RenderBody()
        </div>
    </main>

    <footer class="bg-white py-3 border-top shadow-sm">
        <div class="container d-flex justify-content-center">
            <span class="text-muted">It will be <span class="text-danger">hard</span>,but I can do.</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

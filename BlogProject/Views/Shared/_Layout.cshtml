<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogProject.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">


</head>
<body>
    <div class="container">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <header class="border-bottom lh-1 pt-1 pb-3" style="width:1212px; margin-inline-start:10px">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4" style="height:50px">
                        <div class="container pt-4 ms-0" style="margin-top">
                            <a href="https://github.com/gorkemkayas" class="fab fs-5 fa-github me-2 text-decoration-none text-dark"></a>
                            <a href="https://www.linkedin.com/in/gorkemkayas/" class="fab fs-5 fa-linkedin-in me-2 text-decoration-none text-dark"></a>
                            <a href="https://x.com/gorkemkayaz" class="fa-brands fab fa-x-twitter fs-5 text-decoration-none text-dark"></a>
                        </div>
                    </div>
                    <div class="col-4 text-center">
                        <a class="blog-header-logo text-body-emphasis text-decoration-none text-black OswaldText" style="font-size:50px; font-weight:900" href="#">kayas<span class="text-danger">.</span></a>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        <ul class="list-unstyled d-flex mb-0 mt-2 pt-1 justify-content-end">
                            <li class="nav-item me-2">
                                <a class="btn btn-dark btn-sm text-white px-4" style="border-radius: 30px; font-weight: 500;" href="#">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger btn-sm text-white px-4" style="border-radius: 30px; font-weight: 500;" href="#">Sign up</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </header>
            <div class="nav-scroller py-1 mb-3 border-bottom"  style="width:1212px; margin-inline-start:10px">
                <nav class="nav nav-underline justify-content-between text">
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">World</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">U.S.</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Technology</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Design</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Culture</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Business</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Politics</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Opinion</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Science</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Health</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Style</a>
                    <a class="nav-item nav-link link-body-emphasis OswaldText" href="#">Travel</a>
                </nav>
            </div>

        </div>
        <div class="col-md-2"></div>
        <div class="container">
            <main role="main" class="pb-3 d-flex">

                <div>
                    @RenderBody()
                </div>

            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - BlogProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>

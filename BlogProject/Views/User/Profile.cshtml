        z-index: 1050;
    }

    .alert-danger {
        background: linear-gradient(135deg, #ff4e50, #f9d423);
        color: white;
    }

    .alert-success {
        background: linear-gradient(135deg, #56ab2f, #a8e063);
        color: white;
    }

    .custom-alert i {
        font-size: 22px;
    }

    .show-alert {
        opacity: 1;
        transform: translateY(0);
    }

</style>



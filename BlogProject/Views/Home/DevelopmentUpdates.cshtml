@{
    ViewData["Title"] = "Development Updates";
}

<style>
    .updates-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .updates-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .updates-title {
        font-size: 2.5rem;
        font-weight: 800;
        letter-spacing: -0.05em;
        margin-bottom: 1rem;
        color: #000;
    }

    .updates-subtitle {
        font-size: 1.1rem;
        color: rgba(0, 0, 0, 0.7);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .update-timeline {
        position: relative;
        padding-left: 2rem;
    }

        .update-timeline::before {
            content: '';
            position: absolute;
            top: 0;
            bottom: 0;
            left: 7px;
            width: 2px;
            background: rgba(0, 0, 0, 0.08);
        }

    .update-item {
        position: relative;
        padding: 2rem 0 2rem 2rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

        .update-item:last-child {
            border-bottom: none;
        }

        .update-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 2.5rem;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: #000;
            transform: translateX(-50%);
        }

    .update-date {
        font-size: 0.9rem;
        font-weight: 500;
        color: rgba(0, 0, 0, 0.6);
        margin-bottom: 0.5rem;
    }

    .update-version {
        display: inline-block;
        background: rgba(0, 0, 0, 0.05);
        color: #000;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-left: 0.5rem;
    }

    .update-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #000;
    }

    .update-content {
        color: rgba(0, 0, 0, 0.8);
        line-height: 1.7;
        margin-bottom: 1.5rem;
    }

    .update-features {
        margin: 1.5rem 0;
    }

    .update-feature {
        display: flex;
        margin-bottom: 0.75rem;
    }

    .update-feature-bullet {
        width: 6px;
        height: 6px;
        background: #000;
        border-radius: 50%;
        margin-top: 0.5rem;
        margin-right: 0.75rem;
        flex-shrink: 0;
    }

    .update-feature-text {
        flex: 1;
        color: rgba(0, 0, 0, 0.8);
    }

    .update-status {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .status-planned {
        background: rgba(0, 0, 0, 0.05);
        color: rgba(0, 0, 0, 0.7);
    }

    .status-in-progress {
        background: rgba(0, 123, 255, 0.1);
        color: #007bff;
    }

    .status-completed {
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
    }

    .update-footer {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .update-link {
        display: inline-flex;
        align-items: center;
        color: #000;
        font-weight: 500;
        text-decoration: none;
    }

        .update-link svg {
            width: 16px;
            height: 16px;
            margin-left: 0.5rem;
            transition: transform 0.2s ease;
        }

        .update-link:hover svg {
            transform: translateX(3px);
        }

    @@media (max-width: 768px) {
        .updates-title {
            font-size: 2rem;
        }

        .update-item {
            padding: 1.5rem 0 1.5rem 1.5rem;
        }

        .update-title {
            font-size: 1.3rem;
        }
    }
    /* Önceki CSS tanımlarını aynen tutuyoruz, sadece status-completed class'ını güncelliyoruz */
    .status-completed {
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
        content: "Completed";
    }

        /* Durum metinlerini Türkçe yapmak için ek CSS */
        .status-completed::before {
            content: "Completed";
        }

    .status-in-progress::before {
        content: "In-process";
    }

    .status-planned::before {
        content: "Planned";
    }
</style>
